<div class="input-form label-bottom">
    <input class="input-md" name="username" type="text" placeholder="Логин">
    <label>Логин</label>
</div>
<div class="input-form label-bottom">
    <input class="input-md"  name="password"  type="password" placeholder="Пароль">
    <label>Пароль</label>
</div>
<div class="input-form label-bottom">
    <input class="input-md"  name="passwordConfirm" type="password" placeholder="Повторите пароль">
    <label>Повторите пароль</label>
</div>
<div class="input-form label-bottom">
    <span class="error">Привет чудо</span>
    <input class="input-md" name="email" type="text" placeholder="e-mail">
    <label>e-mail</label>
</div>
<div class="btn-wrapper">
    <button type="button" id="sign-up" class="btn-md">Регистрация</button>
    <button type="button" id="sign-up-cancel" class="btn-md">Отмена</button>
</div>    

